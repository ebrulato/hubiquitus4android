<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/loginLabel"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Login" />

            <EditText
                android:id="@+id/loginText"
                android:layout_width="wrap_content"
                android:textSize="9dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:ems="10" >

                <requestFocus />
            </EditText>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/passwordLabel"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="password" />

            <EditText
                android:id="@+id/passwordText"
                android:layout_width="wrap_content"
                android:textSize="9dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPassword" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/gatewaysLabel"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="endpoints" />

                <EditText
                    android:id="@+id/gatewaysText"
                    android:layout_width="wrap_content"
                    android:textSize="9dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:ems="10" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    
    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/serverhostLabel"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="serverHost" />

            <EditText
                android:id="@+id/serverhostText"
                android:layout_width="wrap_content"
                android:textSize="9dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:ems="10"
                />

        </LinearLayout>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/serverportLabel"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="serverPort" />

            <EditText
                android:id="@+id/serverportText"
                android:layout_width="wrap_content"
                android:textSize="9dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:ems="10"
                />

        </LinearLayout>
     
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/ChannelIDLabel"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Channel ID" />

            <EditText
                android:id="@+id/ChannelIDText"
                android:layout_width="wrap_content"
                android:textSize="9dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:ems="10"
                />

        </LinearLayout>
        
     </LinearLayout> 
  
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/nbLastMessageLabel"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="NbLastMsg" />

            <EditText
                android:id="@+id/NbLastMessageText"
                android:layout_width="wrap_content"
                android:textSize="9dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:ems="10"
                />

        </LinearLayout>
        
     </LinearLayout>
     
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/MessageLabel"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Message" />

            <EditText
                android:id="@+id/MessageText"
                android:layout_width="wrap_content"
                android:textSize="9dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:ems="10"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp" >

        <RadioGroup
            android:id="@+id/transportGroupbutton"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

	            <RadioButton
	                android:id="@+id/xmppButton"
	                android:layout_width="110dp"
	                android:layout_height="wrap_content"
	                android:checked="true"
	                android:text="xmpp"
	                android:textSize="20px" />
	
	            <RadioButton
	                android:id="@+id/socketButton"
	                android:layout_width="100dp"
	                android:layout_height="wrap_content"
	                android:gravity="center"
	                android:text="socketio" 
	                android:textSize="20px"/>
	        	
	        	<TextView
	        	    android:layout_marginLeft="10dp"
                	android:id="@+id/connectionStatusLabel"
                	android:layout_width="150dp"
                	android:layout_height="wrap_content"
                	android:text="DISCONNECTED" />
        </RadioGroup>
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp" >

        <RadioGroup
            android:id="@+id/MessageGroupbutton"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

	            <RadioButton
	                android:id="@+id/transientButton"
	                android:layout_width="110dp"
	                android:layout_height="wrap_content"
	                android:checked="true"
	                android:text="Transient" 
	                android:textSize="20px"/>
	
	            <RadioButton
	                android:id="@+id/notTransienttButton"
	                android:layout_width="130dp"
	                android:layout_height="wrap_content"
	                android:gravity="center"
	                android:text="not Transient"
	                android:textSize="20px" />
	            
        </RadioGroup>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/ConnectionButton"
                android:textSize="10dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Connect" />

            <Button
                android:id="@+id/DeconnectionButton"
                android:textSize="10dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Disconnect" />

            <Button
                android:id="@+id/ClearButton"
                android:textSize="10dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Clear" />
            
            <Button
                android:id="@+id/hechoButton"
                android:textSize="10dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="hEcho" />
            
       </LinearLayout>

    </LinearLayout>
    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/SubscribeButton"
                android:textSize="10dp"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:text="Subscribe" />

            <Button
                android:id="@+id/UnsubscribeButton"
                android:textSize="10dp"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:text="Unsub" />

            <Button
                android:id="@+id/PublishButton"
                android:textSize="10dp"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:text="Publish" />
            
            <Button
                android:id="@+id/GetLastMessageButton"
                android:textSize="10dp"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:text="GetLstMsg" />
            
            <Button
                android:id="@+id/GetSubcriptionButton"
                android:textSize="10dp"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:text="GetSubs" />
       </LinearLayout>

    </LinearLayout>

    <ScrollView 
        android:id="@+id/scrollview"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent">
    <TextView
        android:id="@+id/outputView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="" />
	</ScrollView>
	
</LinearLayout>